#!/usr/bin/perl

use strict;
use warnings;
use POSIX qw(strftime);

my $date = strftime "%Y%m%d", localtime;

print "Content-type: text/html\n\n";

print <<ENDHTML;
<!DOCTYPE html>

<html>
<meta charset="UTF-8">
<body>
    <img src="http://tjanster.idg.se/dilbertimages/dil$date.gif" >
</body>
</html>

ENDHTML
