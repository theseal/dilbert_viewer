#!/usr/bin/perl

use strict;
use warnings;
use POSIX qw(strftime);

my $date = strftime "%Y%m%d", localtime;

print "Content-type: text/html\n\n";

print <<ENDHTML;
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Dilbert</title>
</head>
<body>
ENDHTML

my $count;
while ($count < 30) {
    $date = strftime "%Y%m%d", localtime(time() - 24*60*60*$count);
    print "<img src=\"http://tjanster.idg.se/dilbertimages/dil$date.gif\" alt=\"dibert.gif\"/>";
    print "<br />";
    $count++;
}

print <<ENDHTML;
</body>
</html>

ENDHTML
